{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
   "paths": {
      "@/*": ["app/*"] ,
      "@components/*": ["app/components/*"],
      "@types/*": ["app/types/*"],
      "@store/*": ["app/store/*"],
      "@canvas/*": ["app/components/canvas/*"],
      "@layout/*": ["app/components/layout/*"],
      "@pages/*": ["app/components/pages/*"],
      "@containers/*": ["app/components/containers/*"],
      "@forms/*": ["app/components/forms/*"],
      "@requirements/*": ["app/components/requirements/*"],
      
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
